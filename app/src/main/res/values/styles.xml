<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Button.Actions">
        <item name="android:background">@drawable/selector_btn_actions</item>
    </style>
    <style name="Button.Number">
        <item name="android:background">@drawable/selector_btn_number</item>
    </style>
    <style name="Button.Operator">
        <item name="android:background">@drawable/selector_btn_operator</item>
    </style>

</resources>